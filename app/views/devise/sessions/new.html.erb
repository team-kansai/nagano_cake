<div class="container">
  <div class="row">
    <div class="col-md-3 mb-4 text-center">
      <h3><span class="bg-light">ログイン</span></h3>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-4 offset-md-1 mb-2">
      <h5><span class="bg-light">会員の方はこちらからログイン</span></h5>
    </div>
  </div>
  <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
  <div class="row mb-2">
    <div class="col-md-2 offset-md-2 form-group">
      <%= f.label "メールアドレス" %>
    </div>
    <div class="col-md-5">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col-md-2 offset-md-2 form-group">
      <%= f.label "パスワード" %>
    </div>
    <div class="col-md-5">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 offset-4">
      <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
    </div>
  </div>
  <% end %>
  <div class="row mb-3 mt-4">
    <div class="col-md-4 offset-md-1 mb-2">
      <h5><span class="bg-light">会員登録がお済みでない方</span></h5>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 offset-2">
      <p><%= link_to "こちら", new_customer_registration_path %>&nbsp;から新規登録を行ってください</p>
    </div>
  </div>
</div>
