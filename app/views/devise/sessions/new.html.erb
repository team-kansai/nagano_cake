<div class="container">
  <div class="row">
    <div class="col-md-3 col-offset-9">
      <h3>ログイン</h3>
    </div>
  </div>
  <h5><span class="bg-light">会員の方はこちらからログイン</span></h5>
  <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
  <div class="row">
    <div class="col-md-2 form-group text-center">
      <%= f.label "メールアドレス" %>
    </div>
    <div class="col-md-5 col-offset-5">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 form-group text-center">
      <%= f.label "パスワード" %>
    </div>
    <div class="col-md-5 col-offset-5">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-3 col-offset-2">
      <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
    </div>
  </div>
  <% end %>
  <h5><span class="bg-light">会員登録がお済みでない方</span></h5>
  <div class="row">
    <div class="col-md-6 col-offset-6 text-center">
      <p><%= link_to "こちら", new_customer_registration_path %>&nbsp;から新規登録を行ってください</p>
    </div>
  </div>
  </div>
</div>
