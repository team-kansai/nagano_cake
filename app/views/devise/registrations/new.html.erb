<div class="container">
  <div class="row mb-4 ml-5">
    <div class="col-md-5　offset-md-3">
      <h4><span class="bg-light">新規会員登録</span></h4>
    </div>
  </div>
  <%= form_with model: @customer, url: customer_registration_path, local:true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="col-md-3">
      <%= f.label "名前" %>
    </div>
    <div class="col-md-1 text-right">(姓)</div>
    <div class="form-group col-md-3">
      <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "令和" %>
    </div>
    <div class="col-md-1 text-right">(名)</div>
    <div class="form-group col-md-3">
      <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "道子" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= f.label "フリガナ" %>
    </div>
    <div class="col-md-1 text-right">(セイ)</div>
    <div class="form-group col-md-3">
      <%= f.text_field :last_name_kana, autofocus: true, class: "form-control", placeholder: "レイワ" %>
    </div>
    <div class="col-md-1 text-right">(メイ)</div>
    <div class="form-group col-md-3">
      <%= f.text_field :first_name_kana, autofocus: true, class: "form-control", placeholder: "ミチコ" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= f.label "メールアドレス" %>
    </div>
    <div class="form-group col-md-3 offset-md-1">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= f.label "郵便番号(ハイフンなし)" %>
    </div>
    <div class="form-group col-md-3 offset-md-1">
      <%= f.text_field :postcode, autofocus: true, class: "form-control", placeholder: "0000000" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= f.label "住所" %>
    </div>
    <div class="form-group col-md-7 offset-md-1">
      <%= f.text_field :address, autofocus: true, class: "form-control", placeholder: "東京都渋谷区代々木神園町" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= f.label "電話番号(ハイフンなし)" %>
    </div>
    <div class="form-group col-md-3 offset-md-1">
      <%= f.text_field :phone_number, autofocus: true, class: "form-control", placeholder: "00000000000" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= f.label "パスワード(6文字以上)" %>
    </div>
    <div class="form-group col-md-3 offset-md-1">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= f.label "パスワード(確認用)" %>
    </div>
    <div class="form-group col-md-3 offset-md-1">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>
    <div class="row">
    <div class="offset-md-4">
    </div>
    <div class="col-md-3">
      <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
    </div>
  </div>
  <% end %>
  <div class="row ml-2">
    <div class="col-md-3">
      <h4><span class="bg-light">既に登録済みの方</span></h4>
    </div>
  </div>
  <div class="row mt-1 ml-5">
    <div class="col-md-4">
      <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>  
    </div>
  </div>
</div>
