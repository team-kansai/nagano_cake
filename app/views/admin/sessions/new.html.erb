<div class="container">
  <div class="row">
    <div class="form-group mx-auto col-sm-6">
      <h2 class="mb-3">管理者ログイン</h2>
      <%= form_with(model: resource, scope: resource_name, url: session_path(resource_name)) do |f| %>
      <form>
        <div>
          <div class="form-group row">
            <%= f.label :'メールアドレス', class: "col-sm-3 col-form-label"%>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-6 form-control-static" %>
          </div>
          <div class="form-group row">
            <%= f.label :'パスワード', class: "col-sm-3 control-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-6 form-control-static" %>
          </div>
          <div class="actions">
            <%= f.submit 'ログイン', class: 'btn btn-sm btn-primary' %>
          </div>
        </div>
      </form>
      <% end %>
    </div>
  </div>
</div>