<div class="container">
  <div class="row">
    <h4 class="col offset-md-1 mb-md-5">ジャンル編集</h4>
  </div>
  <div class="row">
    <div class="col-md-2 offset-md-1 mb-md-5">
      <p>ジャンル名</p>
    </div>
    <div class="col">
      <%= form_with model: @genre, url: admin_genre_path, method: :patch, local:true do |f| %>
        <%= f.text_field :name %>
        <%= f.submit '変更を保存',class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>