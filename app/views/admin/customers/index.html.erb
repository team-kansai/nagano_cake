<div class="container">
<h3>会員一覧</h3>
<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>⽒名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <% @customers.each do |customer| %>
  <tbody>
    <tr>
      <td><%= customer.id %></td>
      <td>
        <%= link_to admin_customer_path(customer.id) do %>
          <%= customer.last_name %><%= customer.first_name %>
        <% end %>
      </td>
      <td><%= customer.email %></td>
      <td><%= customer.is_deleted %></td>
    </tr>
  </tbody>
  <% end %>
</table>
  <div class="row">
    <div class="col-auto mx-auto"><%= paginate @customer %></div>
  </div>
</div>