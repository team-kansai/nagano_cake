<div class="container">
  <div class="row mb-3">
    <div class="col-md-2 col-md-offset-10">
      <h3><span class="bg-light">会員一覧</span></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 mx-auto">
      <table class="table">
        <thead class="bg-light">
          <tr>
            <th>会員ID</th>
            <th>⽒名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
        <tbody>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id), class: "text-body" do %>
                <%= customer.last_name %><%= customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td><%= customer.is_deleted %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
    <div class="row">
      <div class="col-auto mx-auto"><%= paginate @customers %></div>
    </div>
</div>