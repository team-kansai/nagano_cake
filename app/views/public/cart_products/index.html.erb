<div class="container">
  <h2>ショッピングカート</h2>
  <div class="row">
    <div class="col-sm-12">
      <div class="mb-3 text-right">
        <%= link_to 'カートを空にする', cart_products_destroy_all_path(@cart), method: :delete, class: 'btn btn-danger' %>
      </div>
      <div>
        <table class="table table-hover table-bordered">
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
          <tb>
            <% @sum = 0 %>
            <% @cart.each do |cart| %>
              <tr>
                <td><%= cart.product.name %></td>
                <td>￥<%= (cart.product.price*1.10).to_i %></td>
                <td>
                  <%= form_with model: cart, url: cart_product_path(cart), local:true do |f| %>
                    <%= f.select :quantity, options_for_select((1..10).to_a), include_blank: "#{cart.quantity}" %>
                    <%= f.submit '変更', class: 'btn btn-success' %>
                  <% end %>
                </td>
                <td>
                  ￥<%= ((cart.product.price*1.10)*(cart.quantity)).to_i %>
                  <% @sum +=  ((cart.product.price*1.10)*(cart.quantity)).to_i %>
                </td>
                <td>
                  <div class="text-center">
                    <%= link_to '削除する', cart_product_path(cart.id), method: :delete, class: 'btn btn-danger' %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tb>
        </table>
        <div>
          <%= link_to '買い物を続ける', root_path, class: 'btn btn-primary' %>
        </div>

      <div class="col-sm-3">
      <table class="table table-bordered text-right">
        <thead>
          <tr>
            <td class="text-left">合計金額</td>
            <td class="text-left">
              ¥<%= @sum %>
              <!--カート内商品の合計金額の表示を行う-->
            </td>
          </tr>
        </thead>
      </table>
      </div>
        <div class="text-center">
          <%= link_to '情報入力に進む', new_order_path, class: 'btn btn-success btn-lg' %>
        </div>
      </div>
    </div>
  </div>
</div>