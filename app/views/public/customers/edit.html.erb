<div class="container">
  <div class="form-horizontal">
    <div class="col-md-offset-1 col-md-7">
      <h2 class="customer_title">会員情報編集</h2>
      <div class="col-xs-10 form-group">
      <%= form_with model:@customer, url:customers_path, local:true, method: :patch do |f| %>
    
        <div class="form-group col-xs-12">
          <%= f.label :'氏名', class: "col-sm-3 control-label" %>
          <%= f.text_field :last_name, class: "col-sm-3 name_field" %>
          <%= f.text_field :first_name, class: "col-sm-3" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :'フリガナ', class: "col-sm-3 control-label" %>
        　<%= f.text_field :last_name_kana, class: "col-sm-3" %>
        　<%= f.text_field :first_name_kana, class: "col-sm-3" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :'郵便番号', class: "col-sm-3 control-label" %>
        　<%= f.text_field :postcode, class: "col-sm-3" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :'住所', class: "col-sm-3 control-label" %>
        　<%= f.text_field :address, class: "col-sm-6" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :'電話番号', class: "col-sm-3 control-label" %>
        　<%= f.text_field :phone_number, class: "col-sm-6" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :'メールアドレス', class: "col-sm-3 control-label" %>
        　<%= f.text_field :email, class: "col-sm-6" %>
        </div>


        <div>
          <%= f.submit '編集内容を保存', class: 'btn btn-success w-25 edit_btn' %>
          <%= link_to '退会する', customers_unsubscribe_path, class: 'btn btn-danger w-25' %>
        </div>
      
      <% end %>
      </div>
    </div>
  </div>
</div>