<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-11">
      <h2 class="offset-sm-1 mb-4">注文情報入力</h2>

      <%= form_with model: @order, url: orders_confirm_path, method: :post,local: true do |f| %>

        <div class="mb-3">
          <h5>
            <%= f.label :payment_method, "支払方法" %>
          </h5>
          <div class="col-sm-10">
            <div class="col-sm-10">
              <%= f.radio_button :payment_method, 0, checked: "checked" %>
              <%= f.label :payment_method, "クレジットカード" %>
            </div>
            <div class="col-sm-10">
              <%= f.radio_button :payment_method, 1 %>
              <%= f.label :payment_method, "銀行振込" %>
            </div>
          </div>
        </div>

        <div class="mb-3">
          <h5>
            <%= f.label :address, "お届け先" %>
          </h5>
          <div>
            <div class="col-sm-10 mb-4">
              <div class="col-sm-10">
              <%= f.radio_button :address, 0, checked: "checked" %>
              <%= f.label :address, "ご自身の住所" %></br>
              <%= "〒#{current_customer.postcode} #{current_customer.address}" %></br>
              <%= "#{current_customer.last_name} #{current_customer.first_name}" %>
              </div>
            </div>

            <% if @shipping_addresses != [] %>
            <div class="col-sm-10 mb-4">
              <div class="col-sm-10">
                <%= f.radio_button :address, 1 %>
                <%= f.label :address, "登録済住所から選択" %><br>
                <%= f.collection_select :address , current_customer.shipping_addresses, :id, :full_address %>
              </div>
            </div>
            <% end %>
            <div class="col-sm-10 mb-4">
              <div class="col-sm-10">
                <%= f.radio_button :address, 2 %>
                <%= f.label :address, "新しいお届け先" %>
                <div class="form-row mb-2">
                  <%= f.label :postcode, "郵便番号(ハイフンなし)", class: "col-sm-5" %>
                  <%= f.text_field :postcode, :placeholder => "0000000", class: "col-sm-5" %>
                </div>
                <div class="form-row mb-2">
                  <%= f.label :address, "住所", class: "col-sm-2" %>
                  <%= f.text_field :address, :placeholder => "東京都渋⾕区代々⽊神園町0-0", class: "col-sm-8" %>
                </div>
                <div class="form-row mb-2">
                  <%= f.label :name, "宛名", class: "col-sm-2" %>
                  <%= f.text_field :name, :placeholder => "令和道⼦" ,class: "col-sm-8" %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-10">
          <%= f.submit "確認画面へ進む", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>