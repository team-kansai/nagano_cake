<div class="container">
  <h2 class="mb-3">注文履歴一覧</h2>
  <div class="row">
    <div class="col-sm-12">
      <div>
        <table class="table table-bordered">
          <thead class="thead-light">
            <tr>
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
              <th>ステータス</th>
              <th>注文詳細</th>
            </tr>
          </thead>
          <tb>
            <% @orders.each do |order| %>
              <tr>
                  <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
                  <td>
                    〒<%= order.postcode %><br>
                    <%= order.address %><br>
                    <%= order.name %>
                  </td>
                  <td>
                    <% order.ordered_products.each do |ordered_product| %>
                      <%= ordered_product.product.name %><br>
                    <% end %>
                  </td>
                  <td><%= order.total_price %>円</td>
                  <td><%= order.order_status %></td>
                  <td>
                    <div class="text-center">
                      <%= link_to '表示する', order_path(current_customer.id), class: 'btn btn-primary' %>
                    </div>
                  </td>
            <% end %>
              </tr>
          </tb>
        </table>
      </div>
    </div>
  </div>
</div>