<div class="container">
  <div class="row mb-5">
    <h4>注文履歴詳細</h4>
  </div>
  <div class="row">
    <div class="col-md-8">
      <h5 class=>注文情報</h5>
      <table class="table table-bordered">
        <tr>
          <td class="col-xs-2 table-light">注文日</td>
          <td>注文日<%# %></td>
        </tr>
        <tr>
          <td class="table-light"><p class="align-middle">配送先</p></td>
          <td>
            〒マー郵便番号<br>
            住所<br>
              宛名
          </td>
        </tr>
        <tr>
          <td class="table-light">支払方法</td>
          <td>支払方法<%# %></td>
        </tr>
        <tr>
          <td class="table-light">ステータス</td>
          <td>ステータス<%# %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-4">
      <h5>請求情報</h5>
      <table class="table table-bordered">
        <tr>
          <td class="table-light">商品合計</td>
          <td>商品合計<%# %></td>
        </tr>
        <tr>
          <td class="table-light">配送料</td>
          <td>配送料<%# %></td>
        </tr>
        <tr>
          <td class="table-light"><strong>ご請求額</strong></th>
          <td><%# %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9">
      <h5>注文内容</h5>
      <table class="table table-bordered">
        <tr>
          <td>商品</td>
          <td>単価(税込)</td>
          <td>個数</td>
          <td>小計</td>
        </tr>
        <%# each文%>
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        <%# end %>
      </table>
    </div>
  </div>
</div>