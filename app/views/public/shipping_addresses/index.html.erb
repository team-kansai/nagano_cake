<div class='container'>
  <div class='row'>
    配送先登録/一覧
  </div>

  <div class='row'>
    <%= form_with model:@shipping_address, url: shipping_addresses_path, local:true do |f| %>
      <h4>郵便番号(ハイフンなし)</h4>
      <%= f.text_field :postcode %>

      <h4>住所</h4>
      <%= f.text_field :address %>

      <h4>宛名</h4>
      <%= f.text_field :name %>

      <%= f.submit '新規登録' %>
    <% end %>
  </div>

  <div class='row'>
    <table border="1">
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
      <tb>
        <% @shipping_addresses.each do |shipping_address| %>
          <tr>
            <td><%= shipping_address.postcode %></td>
            <td><%= shipping_address.address %></td>
            <td><%= shipping_address.name %></td>
            <td>
              <%= link_to '編集する', edit_shipping_address_path(shipping_address.id), class: 'btn btn-primary btn-block' %>
              削除する
            </td>
          </tr>
        <% end %>
      </tb>
    </table>
  </div>
</div>